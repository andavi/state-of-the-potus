<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.bundle.min.js"></script>
<script>
  window.onload = function () {
    // This creates normal js object to work wth
        tweet = <%- JSON.stringify(tweet) %>;
        colormap = <%- JSON.stringify(colormap) %>;

    var ctx = document.getElementById("barChart");
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["Sadness", "Surprise", "Anger", "Fear", "Joy"],
            datasets: [{
                label: 'Emotional Matrix Analysis',
                data: [tweet.sadness, tweet.surprise, tweet.anger, tweet.fear, tweet.joy],
                backgroundColor: [
                    colormap.sadness[1],
                    // colormap.sentiment[1],
                    colormap.surprise[1],
                    colormap.anger[1],
                    colormap.fear[1],
                    colormap.joy[1]
                ],
                borderColor: [
                    colormap.sadness[0],
                    // colormap.sentiment[0],
                    colormap.surprise[0],
                    colormap.anger[0],
                    colormap.fear[0],
                    colormap.joy[0]
                ],
                borderWidth: 2
            },{
                label: 'Sentiment Measurement',
                data: new Array(5).fill(tweet.sentiment),
                backgroundColor: 'rgba(164, 207, 76, 0.05)',
                borderColor: colormap.sentiment[0],
                type: 'line'
                }]
        },
        options: {
            scales: {
                yAxes: [{
                    ticks: {
                        beginAtZero:true
                    }
                }]
            }
        }
    });
  }
</script>